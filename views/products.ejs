  <div class="col-sm-2">
    <div class="d-flex flex-column flex-shrink-0 sidebar" >
      <h3><i class="fas fa-tachometer-alt mt-4"></i> Dashboard</h3>
    
      <ul class="mt-5">
        <li><a href="/dashboard"><i class="fas fa-home"></i> Overview </a></li>
        <li><a href="/dashboard/order"><i class="fas fa-table"></i> Orders </a></li>
        <li><a href="/dashboard/products"><i class="fas fa-boxes"></i> Products </a></li>
        <li><a href="/dashboard/customers"><i class="fas fa-users"></i> Customers </a></li>
        <li><a href="/dashboard/settings"><i class="fas fa-cogs"></i> Settings </a></li>
      </ul>
      <div class="user">
        <div class="dropdown">
          <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://react.semantic-ui.com/images/avatar/small/rachel.png" alt="" width="32" height="32" class="rounded-circle me-2">
            <strong>Christina</strong>
          </a>
          <ul class="dropdown-menu text-small drop-list" aria-labelledby="dropdownUser1">
            <li><a class="dropdown-item" href="#">New project...</a></li>
            <li><a class="dropdown-item" href="#">Settings</a></li>
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#">Sign out</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-10">
    <h3 class="mt-5 page-title">Products</h3>

    <div class="card mb-3 mt-5 dash-productCard" style="max-width: 1080px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="..." class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">Card title</h5>
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <p class="card-text">Price: $<span>1000</span></p>
              <div class="dash-productBtn">
                  <button type="submit" class="btn btn-warning" ><i class="fas fa-pencil-alt "></i></button>
                  <button type="submit" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirm"><i class="fas fa-trash-alt "></i></button>
              </div>
            </div>
          </div>
        </div>
      </div>
   </div>
</div>






<div class="modal" tabindex="-1" id="deleteConfirm">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirmation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure ?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-danger">Confirm</button>
        </div>
      </div>
    </div>
  </div>

