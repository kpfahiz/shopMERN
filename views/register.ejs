<%- include("layouts/header"); -%>
<%- include('layouts/navbar') %>


<div class="container mt-5">
    <h1>Register</h1>
  
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /register route -->
            <form action="/register" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary mt-2">Register</button>
            </form>
  
          </div>
        </div>
      </div>
  
      <div class="col-sm-4">
        <div class="card mb-2" style="background-color: red; ">
            <div class="card-body" style="color: white;">
              <a class="btn btn-block" href="/auth/google" role="button" style="color: white;">
                <i class="fab fa-google" ></i>
                Sign Up with Google
              </a>
            </div>
          </div>
          <div class="card mb-2" style="background-color: blue; ">
              <div class="card-body" style="color: white;">
                <a class="btn btn-block" href="/auth/facebook" role="button" style="color: white;">
                  <i class="fab fa-facebook"></i>
                  Sign Up with Facebook
                </a>
              </div>
            </div>
      </div>
  
    </div>
  </div>

  <%- include("layouts/footer"); -%>